<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="370dp"

    android:elevation="5dp"
    android:orientation="vertical"
    android:background="@color/grey"

    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Valor total"
            android:textSize="26sp"
            android:gravity="center"
            android:textColor="@color/white_transparent"
            android:id="@+id/txtValorTotal"
            android:background="#1B5E20"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="0.00 "
            android:textSize="26sp"
            android:gravity="center"

            android:id="@+id/Valor_total_jogos"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Número de jogos : "
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/total_jogos"
            android:textColor="@color/white_transparent"
            android:background="#1B5E20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="10dp"
            android:orientation="vertical"
            android:background="@color/grey"
            android:showDividers="end"
            android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Bolão "
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Valor Pago : "
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/valor_pago"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Total de pessoas : "
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/num_participantes"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Número de pagantes : "
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pagantes"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Valor por pessoa : "
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/valor_por_participante"/>



          </LinearLayout>

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adviewvalor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2038649645997943/3158480318"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_mail"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_dialog_email"

            android:layout_marginRight="0dp"
            android:layout_marginBottom="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"/>
</RelativeLayout>